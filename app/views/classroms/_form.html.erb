<%= form_for @classrom, :html => { :class => "form-horizontal classrom" } do |f| %>

  <% if @classrom.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@classrom.errors.count, "error") %> prohibited this classrom from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @classrom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :student_id, Student.all, :id, :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :course_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :course_id, Course.all, :id, :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:course_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                classroms_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
